<%- include('../partials/form-header')%>

<div class="container-fluid form">
    <div class="row">
        <div class="contents">
            <form action="/cafes" method="POST">
                <h1 class="form-title">Create a new Cafe</h1>
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input type="url" class="form-control" name="image" placeholder="Image URL" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" placeholder="Description (Optional)"></textarea>
                </div>
                <!-- Price Rating -->
                <div class="form-group icons">
                    <label for="priceInput">Cafe Price: </label>
                    <i price-rating="1" class="fas fa-dollar-sign price"></i>
                    <i price-rating="2" class="fas fa-dollar-sign price"></i>
                    <i price-rating="3" class="fas fa-dollar-sign price"></i>
                    <input type="number" name="price" id="priceInput" value="1" required>
                    <p class="preview" id="pricePreview">Click on the Dollar!</p>
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="price" placeholder="Price (Optional)">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn blue btn-lg btn-block" value="Create Cafe">
                </div>
            </form>
            <a href="/cafes">Go Back</a>
        </div>
    </div>
</div>

<%- include ("../partials/form-footer") %>