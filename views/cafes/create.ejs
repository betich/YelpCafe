<%- include('../partials/header')%>

<div class="container-fluid">
    <h1 class="form-title">Create a new Cafe</h1>
    <div class="row">
        <div style="width:calc(30% + 27vh);margin:24px auto;">
            <form action="/cafes" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" placeholder="Description (Optional)"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn brown btn-lg btn-block btn-primary" value="Create Cafe">
                </div>
            </form>
            <a href="/cafes">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>