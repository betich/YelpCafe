<%- include("../partials/header") %>

<div class="container-fluid">
    <h1 class="form-title">Create a new Comment to <%= cafe.name %></h1>
    <div class="row">
        <div style="width:calc(30% + 27vh);margin:24px auto;">
            <form action="/cafes/<%= cafe._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" autofocus></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn brown btn-lg btn-block btn-primary" value="Create Comment">
                </div>
            </form>
            <a href="/cafes/<%= cafe._id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>