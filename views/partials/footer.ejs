<script>
  function checkWinSize() {
    if ($(window).width() > 992) {
      $(window).scroll(function() {
        if ($(document).scrollTop() > 50) {
          $('nav').add("#nav-container").add(".collapser").addClass("shrink");
        } else {
          $('nav').add("#nav-container").add(".collapser").removeClass("shrink");
        }
      });
    } else $(window).unbind();
  }

  window.setInterval(checkWinSize, 500);
</script>
