<%- include('partials/header')%>

<div class="container">
    <h1 style="text-align:center;margin-top:75px;">Create a new Cafe</h1>
    <div class="row">
        <div style="width:30%;margin:24px auto;">
            <form action="/cafes" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="description" placeholder="Description (Optional)">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-block btn-primary">
                </div>
            </form>
            <a href="/cafes">Go Back</a>
        </div>
    </div>
</div>

<%- include('partials/footer') %>